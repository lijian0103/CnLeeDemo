<resources>

    <style name="IMate"></style>

    <style name="IMate.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="IMate.Text.VrText" parent="IMate.Text">
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">36dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxWidth">224dp</item>
        <item name="android:ellipsize">none</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="IMate.Text.VrPassText" parent="IMate.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">28dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxWidth">1100dp</item>
        <item name="android:minWidth">32dp</item>
    </style>

    <style name="IMate.Text.VrTipsTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:lineHeight">48dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">300dp</item>
    </style>


    <style name="IMate.WeakTip">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="IMate.NormalTip">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:lineHeight">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">textStart</item>
    </style>

</resources>